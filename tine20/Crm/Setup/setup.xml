<?xml version="1.0" encoding="utf-8"?>
<application>
    <name>Crm</name>
    <version>3.3</version>
    <order>20</order>
    <depends>
        <application>Admin</application>
        <application>Addressbook</application>
        <application>Tasks</application>
        <application>Sales</application>
    </depends>
    <tables>
        <table>
            <name>metacrm_lead</name>
            <version>5</version>
            <declaration>
                <field>
                    <name>id</name>
                    <type>integer</type>
                    <autoincrement>true</autoincrement>
                </field>
                <field>
                    <name>lead_name</name>
                    <type>text</type>
                    <length>255</length>
                    <notnull>true</notnull>
                </field>
                <field>
                    <name>leadstate_id</name>
                    <type>integer</type>
                </field>
                <field>
                    <name>leadtype_id</name>
                    <type>integer</type>
                </field>
                <field>
                    <name>leadsource_id</name>
                    <type>integer</type>
                </field>
                <field>
                    <name>container_id</name>
                    <type>integer</type>
                    <notnull>false</notnull>
                </field>
                <field>
                    <name>description</name>
                    <type>text</type>
                </field>
                <field>
                    <name>turnover</name>
                    <type>float</type>
                </field>
                <field>
                    <name>probability</name>
                    <type>integer</type>
                    <length>4</length>
                </field>
                <field>
                    <name>lastreader</name>
                    <type>integer</type>
                </field>                
                <field>
                    <name>start</name>
                    <type>datetime</type>
                    <notnull>true</notnull>
                </field>
                <field>
                    <name>end</name>
                    <type>datetime</type>
                </field>
                <field>
                    <name>end_scheduled</name>
                    <type>datetime</type>
                </field>    
                <field>
                    <name>lastread</name>
                    <type>datetime</type>
                </field>
               <field>
                    <name>created_by</name>
                    <type>text</type>
                    <length>40</length>
                </field>
                <field>
                    <name>creation_time</name>
                    <type>datetime</type>
                </field> 
                <field>
                    <name>last_modified_by</name>
                    <type>text</type>
                    <length>40</length>
                </field>
                <field>
                    <name>last_modified_time</name>
                    <type>datetime</type>
                </field>
                <field>
                    <name>is_deleted</name>
                    <type>boolean</type>
                    <default>false</default>
                </field>
                <field>
                    <name>deleted_by</name>
                    <type>text</type>
                    <length>40</length>
                </field>            
                <field>
                    <name>deleted_time</name>
                    <type>datetime</type>
                </field>
                 
                <index>
                    <name>id</name>
                    <primary>true</primary>
                    <unique>true</unique>
                    <field>
                        <name>id</name>
                    </field>
                </index>
                <index>
                    <name>container_id</name>
                    <field>
                        <name>container_id</name>
                    </field>
                </index>
                <index>
                    <name>metacrm_lead::container_id--container::id</name>
                    <field>
                        <name>container_id</name>
                    </field>
                    <foreign>true</foreign>
                    <reference>
                        <table>container</table>
                        <field>id</field>
                    </reference>
                </index>
            </declaration>
        </table>
        <table>
            <name>metacrm_products</name>
            <version>1</version>
            <declaration>
                <field>
                    <name>id</name>
                    <type>integer</type>
                    <autoincrement>true</autoincrement>
                </field>
                <field>
                    <name>productsource</name>
                    <type>text</type>
                    <length>255</length>
                    <notnull>true</notnull>
                </field>
                <field>
                    <name>price</name>
                    <type>float</type>
                    <notnull>false</notnull>
                </field>
                <index>
                    <name>productsource_id</name>
                    <primary>true</primary>
                    <unique>true</unique>
                    <field>
                        <name>id</name>
                    </field>
                </index>
            </declaration>
        </table>        
        <table>
            <name>metacrm_leads_products</name>
            <version>1</version>
            <declaration>
                <field>
                    <name>id</name>
                    <type>integer</type>
                    <autoincrement>true</autoincrement>
                </field>
                <field>
                    <name>lead_id</name>
                    <type>integer</type>
                    <notnull>true</notnull>
                </field>
                <field>
                    <name>product_id</name>
                    <type>integer</type>
                    <notnull>true</notnull>
                </field>
                <field>
                    <name>product_desc</name>
                    <type>text</type>
                    <length>255</length>
                    <notnull>false</notnull>
                </field>
                <field>
                    <name>product_price</name>
                    <type>float</type>
                    <unsigned>true</unsigned>
                    <notnull>false</notnull>
                </field>
                <index>
                    <name>id</name>
                    <primary>true</primary>
                    <field>
                        <name>id</name>
                    </field>
                </index>
                <index>
                    <name>lead_id</name>
                    <field>
                        <name>lead_id</name>
                    </field>
                </index>
                <index>
                    <name>lead_id</name>
                    <foreign>true</foreign>
                    <field>
                        <name>lead_id</name>
                    </field>
                    <reference>
                        <table>metacrm_lead</table>
                        <field>id</field>
                        <ondelete>CASCADE</ondelete>
                    </reference>
                </index>   
            </declaration>
        </table>
    </tables>
</application>
