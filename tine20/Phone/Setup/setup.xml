<?xml version="1.0" encoding="utf-8"?>
<application>
    <name>Phone</name>
    <version>7.0</version>
    <order>11</order>
    <depends>
        <application>Admin</application>
        <application>Voipmanager</application>
    </depends>
    <tables>
        <table>
            <name>phone_extensions</name>
            <version>2</version>
            <declaration>
                <field>
                    <name>id</name>
                    <type>integer</type>
                    <autoincrement>true</autoincrement>
                </field>
                <field>
                    <name>account_id</name>
	                <type>text</type>
	                <length>40</length>
                    <notnull>true</notnull>
                </field>
                <field>
                    <name>device</name>
                    <type>text</type>
                    <length>128</length>
                    <notnull>true</notnull>
                </field>
                <field>
                    <name>context</name>
                    <type>text</type>
                    <length>128</length>
                    <notnull>true</notnull>
                </field>
                <field>
                    <name>callerid</name>
                    <type>text</type>
                    <length>128</length>
                    <notnull>true</notnull>
                </field>
                <index>
                    <name>id</name>
                    <primary>true</primary>
                    <field>
                        <name>id</name>
                    </field>
                </index>
                <index>
                    <name>account_id-device-context</name>
                    <unique>true</unique>
                    <field>
                        <name>account_id</name>
                    </field>
                    <field>
                        <name>device</name>
                    </field>
                    <field>
                        <name>context</name>
                    </field>
                </index>
            </declaration>
        </table>
        <table>
        	<!-- @todo add constraints to phone_id/line_id? -->
            <name>phone_callhistory</name>
            <version>2</version>
            <declaration>
                <field>
                    <name>id</name>
                    <type>text</type>
                    <length>40</length>
                    <notnull>true</notnull>
                </field>
                <field>
                    <name>line_id</name>
                    <type>text</type>
                    <length>40</length>
                    <notnull>true</notnull>
                </field>
                <field>
                    <name>phone_id</name>
                    <type>text</type>
                    <length>40</length>
                    <notnull>true</notnull>
                </field>
                <field>
                    <name>callerid</name>
                    <type>text</type>
                    <length>80</length>
                    <notnull>false</notnull>
                </field>
                <field>
                    <name>start</name>
                    <type>datetime</type>
                </field>
                <field>
                    <name>connected</name>
                    <type>datetime</type>
                </field>
                <field>
                    <name>disconnected</name>
                    <type>datetime</type>
                </field>
                <field>
                    <name>duration</name>
                    <type>integer</type>
                </field>
                <field>
                    <name>ringing</name>
                    <type>integer</type>
                </field>                
                <field>
                    <name>direction</name>
                    <type>text</type>
                    <length>32</length>
                    <default>in</default>
                    <notnull>true</notnull>
                </field>
                <field>
                    <name>source</name>
                    <type>text</type>
                    <length>64</length>
                    <notnull>true</notnull>
                </field>
                <field>
                    <name>destination</name>
                    <type>text</type>
                    <length>64</length>
                    <notnull>true</notnull>
                </field>
                <index>
                    <name>id</name>
                    <primary>true</primary>
                    <field>
                        <name>id</name>
                    </field>
                    <field>
                        <name>phone_id</name>
                    </field>
                </index>
            </declaration>
        </table>
    </tables>
</application>