<?xml version="1.0" encoding="UTF-8"?>
<config>
    <model>Timetracker_Model_Timeaccount</model>
    <name>ta_default_ods</name>
    <type>export</type>
    <plugin>Timetracker_Export_Ods_Timeaccount</plugin>
    <description>default ods timeaccount export definition</description>
    <!--header>1</header-->
    <headers>
        <header>{date}</header>
        <header>{user}</header>
    </headers>
    <columns>
        <column>
            <identifier>number</identifier>
            <header>Number</header>
            <type>string</type>
            <width>2,5cm</width>
        </column>
        <column>
            <identifier>title</identifier>
            <header>Title</header>
            <type>string</type>
            <width>2,5cm</width>
        </column>
        <column>
            <identifier>description</identifier>
            <header>Description</header>
            <type>string</type>
            <width>10cm</width>
        </column>
        <column>
            <identifier>created_by</identifier>
            <header>Created By</header>
            <type>created_by</type>
            <width>4cm</width>
            <field>accountDisplayName</field>
        </column>
        <column>
            <identifier>creation_time</identifier>
            <header>Creation Date</header>
            <type>datetime</type>
            <width>2,5cm</width>
        </column>
        <column>
            <identifier>status</identifier>
            <header>Status</header>
            <type>string</type>
            <width>3cm</width>
            <translate>1</translate>
        </column>
        <column>
            <identifier>is_billable</identifier>
            <header>Billable</header>
            <type>float</type>
            <width>3cm</width>
        </column>
        <column>
            <identifier>billed_in</identifier>
            <header>Cleared In</header>
            <type>string</type>
            <width>3cm</width>
        </column>
        <column>
            <identifier>is_open</identifier>
            <header>Open</header>
            <type>float</type>
            <width>3cm</width>
        </column>
    </columns>
</config>
