<?xml version="1.0" encoding="UTF-8"?>
<config>
    <model>Timetracker_Model_Timesheet</model>
    <name>ts_template_ods</name>
    <type>export</type>
    <plugin>Timetracker_Export_Ods_Timesheet</plugin>
    <description>default ods timesheet export definition with template</description>
    <customFields>0</customFields>
    <sumColumn>F</sumColumn>
    <billableColumn>G</billableColumn>
    <overviewTable>1</overviewTable>
    <template>timesheet_export_default.ots</template>
    <!--header>1</header-->
    <headers>
        <header>{date}</header>
        <header>{user}</header>
    </headers>
    <columns>
        <column>
            <identifier>start_date</identifier>
            <header>Date</header>
            <type>date</type>
            <width>2,5cm</width>
        </column>
        <column>
            <identifier>description</identifier>
            <header>Description</header>
            <type>string</type>
            <width>10cm</width>
        </column>
        <column>
            <identifier>timeaccount_number</identifier>
            <header>Timeaccount Number</header>
            <type>timeaccount</type>
            <width>5cm</width>
            <field>number</field>
        </column>
        <column>
            <identifier>timeaccount_id</identifier>
            <header>Timeaccount</header>
            <type>timeaccount</type>
            <width>7cm</width>
            <field>title</field>
            <replace>
                <patterns>
                    <pattern>/^XYZ /</pattern>
                </patterns>
                <replacements>
                    <replacement></replacement>
                </replacements>
            </replace>
        </column>
        <column>
            <identifier>account_id</identifier>
            <header>Staff Member</header>
            <type>account_id</type>
            <width>4cm</width>
            <field>accountDisplayName</field>
        </column>
        <column>
            <identifier>duration</identifier>
            <header>Duration</header>
            <type>float</type>
            <width>2cm</width>
            <divisor>60</divisor>
            <number>1</number>
        </column>
        <column>
            <identifier>is_billable_combined</identifier>
            <header>Billable</header>
            <type>float</type>
            <width>3cm</width>
        </column>
        <column>
            <identifier>is_cleared_combined</identifier>
            <header>Cleared</header>
            <type>float</type>
            <width>3cm</width>
        </column>
    </columns>
</config>
